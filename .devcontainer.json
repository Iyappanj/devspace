{
  "name": "DevContainer",
  "image": "ubuntu:latest",
  "workspaceFolder": "/opt/"
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "containerEnv": {
    "RESOURCE_LIMITS": "cpu=1,memory=512Mi"
  },
  "customizations": {
      "devpod": {
             "podManifestTemplate": "pod_manifest.yaml"
          }
}
}
